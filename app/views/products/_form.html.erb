<%= form_with(model: product, local: true) do |form| %>
  <div class="form-group">
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %>
          prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-10">
      <%= form.label :name %>
      <%= form.text_field :name, id: :product_name , class: "single-input"%>
    </div>

    <div class="mt-10">
      <%= form.label :description %>
      <%= form.text_field :description, id: :product_description , class: "single-input"%>
    </div>

    <div class="mt-10">
      <%= form.label :price %>
      <%= form.text_field :price, id: :product_price, class: "single-input" %>
    </div>

    <div class="mt-10">
      <%= form.label :image %>
      <%= form.text_field :image, id: :product_image, class: "single-input" %>
    </div>

    <div class="mt-10">
      <%= form.submit "Submit", class: "genric-btn info radius" %>
    </div>
  </div>
<% end %>