<div class="col-lg-4 col-md-6">
  <div class="single-product">
    <div class="product-img">
      <img class="img-fluid w-100" src="<%= product.image %>" alt="" />
    </div>
    <div class="product-btm">
      <div class="d-block">
        <h4><%= product.name %></h4>
      </div>

      <div class="mt-3">
        <span class="mr-4">$<%= product.price %></span>
      </div>

      <%= link_to("Edit", edit_product_path(product), class: "genric-btn info radius small mt-10") %>
      <%= link_to("Delete", product_path(product),
                  class: "genric-btn danger radius small mt-10",
                  method: :delete,
                  data: {confirm: "Are you sure you want to delete? This action can't be undone."} )
      %>
    </div>
  </div>
</div>